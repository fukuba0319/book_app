<div class="title">新規登録</div>


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@user) do |f| %>
      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :Eメール %>
      <%= f.email_field :email %>

      <%= f.label :パスワード（アルファベットと数字を１文字以上含むようにしてください。６文字以上にしてください。） %>
      <%= f.password_field :password %>

      <%= f.label :パスワードの再確認 %>
      <%= f.password_field :password_confirmation %>   
 

      <%= f.submit "新規登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
