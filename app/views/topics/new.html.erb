<div class="title">投稿フォーム</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @topic do |f| %>
      
      <%= f.label :タイトル %>
      <%= f.text_field :title, class: 'form-control' %>
      
    
     
      <%= f.label :著者 %>
      <%= f.text_field :author, class: 'form-control' %>
         
    
      
      <%= f.label :ジャンル（ラブコメ、ビジネス、参考書、推理、漫画、など御自由にお書きください） %>
      <%= f.text_field :kind, class: 'form-control' %>
      
      
   
      <%= f.label :本の内容 %>
      <%= f.text_area :description, class: 'form-height' %>
  
    
       <% if logged_in? %>
         <%= f.submit "投稿", class: "btn btn-primary" %>
       <% end %>    
    
    <% end %>
  </div>
</div>
